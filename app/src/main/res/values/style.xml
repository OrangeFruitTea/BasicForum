<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeDemo" parent="Theme.AppCompat.Light.NoActionBar">
<!--        应用的主要色调, Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
<!--        状态栏与导航栏相关-->
<!--        状态栏颜色-->
        <item name="android:statusBarColor">#00000000</item>


<!--        控件相关-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="PostCommentTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_post_main_text</item>
    </style>
    <style name="PostInfoTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/app_post_info</item>
    </style>
    <style name="PostTitleTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_post_title</item>
    </style>
    <style name="PostSubTitleTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_post_sub_title</item>
    </style>

</resources>